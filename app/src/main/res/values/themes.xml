<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- General -->
        <item name="colorBackground">#FFFFFF</item>
        <item name="colorShadow">#24000000</item>
        <item name="colorOutline">#1E000000</item>
        <item name="colorTextOverlay">#99000000</item>

        <item name="android:navigationBarColor">#121212</item>

        <item name="colorBottomAppBarBackground">#FFFFFF</item>

        <!-- Navigation -->
        <item name="colorDrawerBackground">#FFFFFF</item>
        <item name="colorDrawerItemRipple">#59000000</item>
        <item name="colorDrawerItemIconSelected">@color/state_drawer_selected_item_icon_color</item>
        <item name="colorDrawerItemTextSelected">@color/state_drawer_selected_item_color</item>
        <item name="drawableDrawerItemBackground">@drawable/state_drawer_item_background</item>

        <item name="colorNoteText">#000000</item>
        <item name="colorNoteIndicator">#B3000000</item>
        <item name="colorAttachmentIndicator">#89000000</item>
        <item name="colorTaskDone">#80000000</item>
        <item name="colorMarkdownTask">#80000000</item>
        <item name="colorMediaControlsBackground">#CC000000</item>

        <item name="colorTaskSwipe">#CCF44336</item>
        <item name="colorHighlightMask">#1F000000</item>

        <item name="colorNoteDefault">#FFFFFF</item>
        <item name="colorNoteGreen">#C5E1A5</item>
        <item name="colorNotePink">#F48FB1</item>
        <item name="colorNoteBlue">#81D4FA</item>
        <item name="colorNoteRed">#EF9A9A</item>
        <item name="colorNoteOrange">#FFAB91</item>
        <item name="colorNoteYellow">#FFF59D</item>

        <item name="popupTheme">@style/Widget.Custom.PopupMenu</item>
        <item name="materialAlertDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DarkBlack">
        <item name="colorBackground">#000</item>

        <item name="colorSurface">#1B1B1B</item>
        <item name="elevationOverlayEnabled">false</item>

        <item name="colorNoteDefault">#000</item>
        <item name="colorDrawerBackground">#191919</item>
        <item name="colorBottomAppBarBackground">#121212</item>
        <item name="android:navigationBarColor">#090909</item>

    </style>

    <style name="Blue">
        <item name="colorPrimary">#2196f3</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorSecondary">#2196f3</item>

        <item name="colorDrawerHeaderBackground">#992196F3</item>
        <item name="colorPrimaryTranscluent">#332196F3</item>

    </style>

    <style name="Green">
        <item name="colorPrimary">#7CB342</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorSecondary">#7CB342</item>

        <item name="colorDrawerHeaderBackground">#997CB342</item>
        <item name="colorPrimaryTranscluent">#337CB342</item>

    </style>

    <style name="Pink">
        <item name="colorPrimary">#C2185B</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorSecondary">#C2185B</item>

        <item name="colorDrawerHeaderBackground">#80C2185B</item>
        <item name="colorPrimaryTranscluent">#29C2185B</item>

    </style>

    <style name="Orange">
        <item name="colorPrimary">#E47400</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorSecondary">#FFB300</item>

        <item name="colorDrawerHeaderBackground">#99FFB300</item>
        <item name="colorPrimaryTranscluent">#29E39F00</item>

    </style>

    <style name="Purple">
        <item name="colorPrimary">#8249E8</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorSecondary">#673AB7</item>

        <item name="colorDrawerHeaderBackground">#99673AB7</item>
        <item name="colorPrimaryTranscluent">#29673AB7</item>

    </style>
</resources>